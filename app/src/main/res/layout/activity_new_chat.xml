<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewChat">

    <EditText
        android:id="@+id/nombre_canal"
        android:layout_width="272dp"
        android:layout_height="39dp"
        android:layout_marginStart="69dp"
        android:layout_marginEnd="70dp"
        android:ems="10"
        android:hint="Introduce un nombre"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/crear_canal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="69dp"
        android:layout_marginTop="197dp"
        android:layout_marginEnd="227dp"
        android:text="Nombre del canal:"
        app:layout_constraintBottom_toTopOf="@+id/nombre_canal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/crear_canal"
        android:layout_width="136dp"
        android:layout_height="46dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="302dp"
        android:text="CREAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cancelar"
        app:layout_constraintTop_toBottomOf="@+id/nombre_canal" />

    <Button
        android:id="@+id/cancelar"
        android:layout_width="136dp"
        android:layout_height="46dp"
        android:layout_marginStart="69dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="302dp"
        android:text="CANCELAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/crear_canal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombre_canal" />
</androidx.constraintlayout.widget.ConstraintLayout>